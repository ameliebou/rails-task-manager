<div class="container">
  <h1 class="title">My tasks</h1>
  <div class="tasks">
    <ul class="list-unstyled">
      <% @tasks.each do |t| %>
        <li>
          <% if t.completed %>
            <i class="far fa-check-square"></i>
          <% else %>
            <i class="far fa-square"></i>
          <% end %>
          <%= link_to t.title, task_path(t), class:"link" %>
          <%= link_to '', task_path(t), method: :delete, class:"fas fa-trash-alt link", data: {confirm: "Are you sure?"} %>
        </li>
      <% end %>
    </ul>
  </div>

  <%= link_to "Add a new task", new_path, class:"link" %>
</div>
